<div class="usersshow">
<h1> Welcome, <%= @user.first_name %>! </h1>
<h2> Get ready to get smarter! </h2>

<p>Visit the Mood Log to record a mood.</p>

<%= link_to "Mood Log", new_mood_path %>

<br><table>
  <thead>

    <br><tr>
      <th>Rating</th>
      <th>Reason</th>
      <th>Narrative</th>
      <th>Logged Date</th>
      <th colspan="4"></th>
    </tr>

  </thead>

<tbody>
    <% @user.moods.each do |mood| %>
      <tr>
        <td><%= mood.rating %></td>
        <td><%= mood.reason %></td>
        <td><%= mood.narrative %></td>
        <td><%= mood.date %></td>
        <td><%= link_to 'Edit', edit_mood_path(mood), :id => "other_stuff" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= render "line_chart" %>
