

<%= form_for @user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %></br>

  <br><%= f.label :last_name %>
  <%= f.text_field :last_name %></br>

  <br><%= f.label :email %>
  <%= f.text_field :email %><br>

  <br><%= f.label :phone_number %>
  <%= f.text_field :phone_num, :placeholder => "XXX-XXX-XXXX" %><br>

  <br><%= f.label :password %>
  <%= f.password_field :password %><br>

  <br><%= f.label :password_confirmation, 'Confirm Password' %>
  <%= f.password_field :password_confirmation %><br>

  <br><%= f.submit 'Submit', id: 'submit' %>
  <% end %>
